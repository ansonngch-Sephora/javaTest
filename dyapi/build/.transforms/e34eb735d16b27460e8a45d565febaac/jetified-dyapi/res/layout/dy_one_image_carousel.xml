<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llleftItemLayout1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.07"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"></LinearLayout>

                <LinearLayout
                    android:id="@+id/llRightItemLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="0.6"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="1dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white">

                        <ImageView
                            android:id="@+id/dy_carousel_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter" />

                        <LinearLayout
                            android:id="@+id/dy_item_text_holder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#99676767"
                            android:orientation="vertical"> <!--88-->

                            <TextView
                                android:id="@+id/dy_carousel_item_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="3dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/dy_carousel_item_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="3dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="#90ffffff"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llleftItemLayout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="0.07"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"></LinearLayout>
            </LinearLayout>

            <!--<com.dy.api.example.DYCarouselNotif.DYCircleView
                android:id="@+id/ivArrowRight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>-->

            <ImageView
                android:id="@+id/dy_arrow_right"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:padding="5dp"
                android:rotation="180" />


            <ImageView
                android:id="@+id/dy_arrow_left"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:padding="5dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dy_buttons_wrap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:background="#EFEFEF"
            android:orientation="horizontal"
            android:paddingLeft="4dp">

            <Button
                android:id="@+id/dy_carousel_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAllCaps="true"
                android:textColor="#95989A"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dy_carousel_button1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAllCaps="true"
                android:textColor="#95989A"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>