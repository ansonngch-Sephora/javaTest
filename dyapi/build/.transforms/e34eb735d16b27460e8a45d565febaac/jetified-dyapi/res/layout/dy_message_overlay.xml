<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/dy_overlay_linearwraper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dy_overlay_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.45"
            android:visibility="visible"></ImageView>

        <TextView
            android:id="@+id/dy_overlay_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.05"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="1"
            android:text="aaaaaaaaaaaaaaaaal;g"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="visible"></TextView>

        <TextView
            android:id="@+id/dy_overlay_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/dy_overlay_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.12"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center|top"
            android:maxLines="3"
            android:text="aaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaa"
            android:textColor="#808080"
            android:textSize="16sp"
            android:visibility="visible">

        </TextView>

        <Button
            android:id="@+id/dy_overlay_button1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="0.07"
            android:background="#c75c5c"
            android:text=""
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/dy_overlay_button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/dy_overlay_button1"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="0.07"
            android:background="#EFEFEF"
            android:bottomLeftRadius="15dp"
            android:bottomRightRadius="15dp"
            android:text=""
            android:textSize="18sp"
            android:topLeftRadius="15dp"
            android:topRightRadius="15dp"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dy_overlay_close"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="right"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:scaleType="centerInside" />


</FrameLayout>